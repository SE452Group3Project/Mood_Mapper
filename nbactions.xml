<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>rebuild</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>clean</goal>
                <goal>install</goal>
            </goals>
            <properties>
                <Env.JAVA_HOME>/Library/Java/JavaVirtualMachines/jdk1.8.0_20.jdk/Contents/Home</Env.JAVA_HOME>
                
            </properties>
        </action>
        <action>
            <actionName>run.single.deploy</actionName>
            <packagings>
                <packaging>war</packaging>
            </packagings>
            <goals>
                <goal>package</goal>
            </goals>
            <properties>
                <netbeans.deploy>true</netbeans.deploy>
                <netbeans.deploy.clientUrlPart>${webpagePath}</netbeans.deploy.clientUrlPart>
                <skipTests>true</skipTests>
            </properties>
        </action>
    </actions>
